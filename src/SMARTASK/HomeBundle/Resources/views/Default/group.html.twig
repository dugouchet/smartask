{% extends "SMARTASKHomeBundle:Default:home.html.twig" %}
{%block tile%}{{ parent() }} - Groups{% endblock %}

{% block body %}
<h3>Ajout d'un Groupe</h3>
<div class="well">
  {{ form(form) }}
</div>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.min.css">
<div class="container">
  <div class="row">
  {% for group in listGroups %}
    <div class="col-sm-6 col-md-4">
      <ul class="thumbnails">
        <li class="span3">
          <div class="thumbnail" style="padding: 20">
            <div style="padding:4px">
              <a href="{{ path('open_group_detail', {'id': group.id}) }}">
                <img alt="300x200" style="width: 100%" src="{{ asset('bundles/smartaskhome/images/bench.JPG') }}">
              </a>
            </div>
            <div class="caption">
              <h2>{{ group.getNom }}</h2>
              <p>{{ group.getDescription }}</p>
            </div>
            <div class="modal-footer" style="text-align: left">
              <div class="progress progress-striped active" style="background: #ddd">
                <div class="bar" style="width: 60%;"></div>
              </div>
              <div class="row-fluid">
              {% if group.getUsers %}
                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>  {{ group.getUsers.count }}
              {% else %}  
                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>  {{ group.getUsers.count }}
              {% endif %}
              <th class="span4"><a href="{{ path('smartask_delete_group', {'id': group.id}) }}" class="btn btn-primary" role="button">Delete</a></th>
              </div>
            </div>
          </div>
        </li>
      </ul>
    </div>
    {% endfor %}
</div>
</div>
{% endblock %}